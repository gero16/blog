doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
        
        link(href="https://fonts.googleapis.com/css2?family=Estonia&family=Mulish:ital,wght@0,400;1,700&family=Raleway:ital,wght@0,400;1,700&family=Roboto+Slab&display=swap" rel="stylesheet")
        
        link(rel="stylesheet", href="/../css/styles.css")
        link(rel="stylesheet", href="/../css/crear.css")
        link(rel="stylesheet", href="/../css/perfil.css")

        link(rel="icon", href="/../img/luna.png", type="image/x-icon")
        title #{titulo}
        
    body 
        include ../includes/headerAdmin.pug
        
        div(class="container")
            h1 Bienvenido a su Perfil

            div(class="flex-around datos-perfil")

                div(class="editar-perfil display-none") 
                    form(class="flex-column form-perfil"  method="POST" action=`/auth/${usuario}/editar-perfil`  enctype="multipart/form-data") 
                        ul.lista-editar-perfil
                            li
                                label(for="" class="label-crear") Imagen
                                div(class="flex-column") 
                                    input(type="file" name="imagen" id="imagen-perfil" style="display: none" value=`${imagen}`)  
                                    label(for="imagen-perfil" class="label-imagen") Seleccionar Archivo
                                    span(class="span-foto") !{imagen} 
                            li 
                                label(for="") Usuario 
                                input(name="usuario" type="text" value=`${usuario}`)
                            li
                                label(for="") Nombre 
                                input(name="nombre" type="text" value=`${name}`) 
                            li
                                label Correo 
                                input(name="correo" type="text" value=`${correo}`)
                            li
                                div
                                    label Contraseña 
                                    span(class="olvide-password") Cambiar Contraseña    
                                input(name="password" type="password" value=`${password}`)
                            li
                                button.btn-editar-perfil Editar Perfil
                ul.lista-perfil 
                    li(class="header-lista-perfil")  
                        span Informacion del Usuario
                    li(class="flex-between") 
                        span Usuario 
                        span !{ usuario }
                    li(class="flex-between") 
                        span Nombre 
                        span !{ name }
                    li(class="flex-between") 
                        span Correo 
                        span !{ correo }

                span(class="actualizar-datos-perfil") Actualizar Datos
                span(class="volver-mostrar-info display-none") Volver
                
                div.div-perfil-imagen
                    //img(class="perfil-imagen" src=imagen)
                    div( class="perfil-imagen" style={"background-image":`url(${ imagen })`, "background-position": "center center",  "background-repeat": "no-repeat",
                     "background-size" : "cover"})
                    p.cambiar-foto Cambiar Foto
                
        include ../includes/divNotificaciones.pug 
                                    
        include ../includes/menuPhone.pug 
                  

        script(src="/../js/helpers/middlewares-front.js" type="module" )           
        script(src="/../js/perfil-front.js" type="module")  
                    


