doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
       
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Estonia&family=Mulish:ital,wght@0,400;1,700&family=Raleway:ital,wght@0,400;1,700&family=Roboto+Slab&display=swap" rel="stylesheet")
        
        link(rel="stylesheet", href="/../css/styles.css")
        link(rel="stylesheet", href="/../css/passwords.css")
        link(rel="icon", href="/../img/luna.png", type="image/x-icon")
        title #{titulo}

    body 

        
  
        header.flex-between 
            .flex-center
                a(href="/")   
                    img(class="logo" src="/../img/logito3.jpg")
                span(class="span-autor") Master Reiki Usui Rose Mary Alvez
                img( class="img-menu" src="/../img/menu.png" alt="Icono menu")
            
            nav.menu 
                ul(class="flex-around menu-lista")
                    li
                        a(href="/") Inicio
                    li
                        img(src="/../img/menu.png")

        div(class="container")
            form(action=`/auth/${ usuario }/olvide-password/${ token }` method="POST" class="flex-center") 
                ul.lista-cambiar-password
                    li 
                        label(for="") Eliga su nueva contraseña
                    li
                        input(name="password" type="text")
                    li
                        button(type="submit" class="btn-cambiar-password") Cambiar Contraseña 
              
                

    script(src="/js/helpers/middlewares-front.js" type="module")    

                       
         
                     