doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Estonia&family=Mulish:ital,wght@0,400;1,700&family=Raleway:ital,wght@0,400;1,700&family=Roboto+Slab&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="/css/styles.css")
        link(rel="icon", href="/img/luna.png", type="image/x-icon")
        title #{titulo}

    body 

        header.flex-between 
            .flex-center 
                img(class="logo" src="/img/logito3.jpg")
                span(class="span-autor") Master Reiki Usui Rose Mary Alvez
                img( class="img-menu" src="/img/menu.png" alt="Icono menu")
            
            nav.menu 
                ul(class="flex-around menu-lista")
                    li
                        a(href=`/auth/${usuario}/index`) Inicio
                    li
                        a(class="ref-crear" href=`/auth/${usuario}/crear-post`) Crear Post
                    li
                        a(href="#") Nosotros
                    li
                        a(href=`/auth/${usuario}/perfil`) Perfil #{miniName}
                    li 
                        a(class="logout") Cerrar Sesión
                    li
                        img(src="/img/menu.png")
    
        .container 
                span.frase-cabecera.flex-center Inserte su frase de cabecera 
                .blog
                    .post 
                        .div-imagen 
                            img(class="post-img" src=`${imagen}`)
                        .post-div-contenido 
                            span.post-fecha #{fecha}
                                span.post-autor | Autor:
                                    strong #{autor} 
                            h2.post-titulo #{titulo}
                            .post-contenido 

   
        footer(class="flex-between")
            span © 2022 Espacio Luz de Luna
            div 
                div Tel: 26131674 
                div Cel: 26131674
                
    script(src="/js/middlewares.js") 
    script(src="/js/index.js") 